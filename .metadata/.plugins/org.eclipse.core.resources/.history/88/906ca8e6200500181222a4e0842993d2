package View;

import javax.swing.JFrame;
import javax.swing.JToolBar;
import java.awt.BorderLayout;
import javax.swing.SpringLayout;
import java.awt.GridLayout;
import javax.swing.JMenuBar;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JMenu;
import javax.swing.JTable;

public class VentanaPrincipalMedico extends JFrame{
	private JTable table;
	
	public VentanaPrincipalMedico() {
		
		 setLocationRelativeTo(null);
	     setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		SpringLayout springLayout = new SpringLayout();
		getContentPane().setLayout(springLayout);
		
		JButton btnNewButton = new JButton("Nuevo paciente");
		springLayout.putConstraint(SpringLayout.WEST, btnNewButton, 49, SpringLayout.WEST, getContentPane());
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
			}
		});
		getContentPane().add(btnNewButton);
		
		JMenuBar menuBar = new JMenuBar();
		springLayout.putConstraint(SpringLayout.NORTH, menuBar, 0, SpringLayout.NORTH, getContentPane());
		springLayout.putConstraint(SpringLayout.SOUTH, menuBar, -270, SpringLayout.SOUTH, getContentPane());
		springLayout.putConstraint(SpringLayout.NORTH, btnNewButton, 91, SpringLayout.SOUTH, menuBar);
		springLayout.putConstraint(SpringLayout.WEST, menuBar, 0, SpringLayout.WEST, getContentPane());
		springLayout.putConstraint(SpringLayout.EAST, menuBar, 500, SpringLayout.WEST, getContentPane());
		getContentPane().add(menuBar);
		
		JMenu mnSesion = new JMenu("Sesion");
		menuBar.add(mnSesion);
		
		JMenu mnNewMenu = new JMenu("Cerrar Sesi√≥n");
		mnSesion.add(mnNewMenu);
		
		JMenu mnNewMenu_1 = new JMenu("Adrm. Pacientes");
		menuBar.add(mnNewMenu_1);
		
		JMenu mnNewMenu_2 = new JMenu("Ver Pacientes");
		mnNewMenu_1.add(mnNewMenu_2);
		
		JMenu mnAyuda = new JMenu("Ayuda");
		menuBar.add(mnAyuda);
		
		table = new JTable();
		springLayout.putConstraint(SpringLayout.NORTH, table, 284, SpringLayout.SOUTH, menuBar);
		springLayout.putConstraint(SpringLayout.WEST, table, -183, SpringLayout.EAST, getContentPane());
		springLayout.putConstraint(SpringLayout.SOUTH, table, 284, SpringLayout.SOUTH, menuBar);
		springLayout.putConstraint(SpringLayout.EAST, table, -183, SpringLayout.EAST, getContentPane());
		getContentPane().add(table);
	}
}
